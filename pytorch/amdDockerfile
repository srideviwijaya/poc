FROM rocm/pytorch:rocm6.2_ubuntu22.04_py3.10_pytorch_release_2.3.0
USER root
WORKDIR /workspace

COPY ./deps /tmp/python_packages
COPY ./poc /workspace

RUN chmod -R u+w /tmp/python_packages
RUN pip install --no-index --find-links=/tmp/python_packages /tmp/python_packages/*.whl\
    && rm -rf /tmp/python_packages #cleanup

CMD ["/bin/bash"]
